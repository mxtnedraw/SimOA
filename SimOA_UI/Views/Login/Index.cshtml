@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>易OA系统登录</title>
    <script type="text/javascript">
        if (window.parent.window != window) {
            window.top.location.href = "@Url.Action("Index", "Login")";
        }
    </script>
    <script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/md5.js"></script>
    <script type="text/javascript">

        $(function () {
            changeValidateCode();
            $("#LoginPwd").val("");
            $("#code").val("");

            $("#btnLogin").click(function () {
                $("#msg").hide();
                if ($("#LoginPwd").val() != "") {
                    $("#HiddenPwd").val(hex_md5($("#LoginPwd").val()));
                }
            });

            $("#LoginForm").validate({
                onsubmit: true,// 是否在提交是验证
                onfocusout: false,// 是否在获取焦点时验证
                onkeyup: false,// 是否在敲击键盘时验证

                rules: {　　　　//规则
                    LoginCode: {　　//要对应相对应的input中的name属性
                        required: true
                    },
                    LoginPwd: {
                        required: true
                    },
                    vCode: {
                        required: true
                    }
                },
                messages: {　　　　//验证错误信息
                    LoginCode: {
                        required: "请输入账号"
                    },
                    LoginPwd: {
                        required: "请输入密码"
                    },
                    vCode: {
                        required: "请输入验证码"
                    }
                }
            });
        });

        function changeValidateCode() {
            $("#img").attr("src", '@Url.Action("ValidateCode", "Login")' + '?a=' + Math.random());
        }

        function LoginAfter(msg) {
            if (msg == "ok") {
                window.location.href = '@Url.Action("Index", "Home")';
            } else {
                $("#msg").css("display", "block");
                $("#msg").text(msg);
                changeValidateCode();
            }
        }
    </script>

    <style type="text/css">
        * {
            padding: 0;
            margin: 0;
        }

        body {
            text-align: center;
            background: #4974A4;
        }

        .error {
            color:red;
        }

        #login {
            width: 740px;
            margin: 0 auto;
            font-size: 12px;
        }

        #loginlogo {
            width: 700px;
            height: 100px;
            overflow: hidden;
            /*background: url('/Content/Images/login/logo.png') no-repeat;*/
            margin-top: 50px;
        }

        #loginpanel {
            width: 729px;
            position: relative;
            height: 310px;
        }

        .panel-h {
            width: 729px;
            height: 20px;
            background: url('/Content/Images/login/panel-h.gif') no-repeat;
            position: absolute;
            top: 0px;
            left: 0px;
            z-index: 3;
        }

        .panel-f {
            width: 729px;
            height: 13px;
            background: url('/Content/Images/login/panel-f.gif') no-repeat;
            position: absolute;
            bottom: 0px;
            left: 0px;
            z-index: 3;
        }

        .panel-c {
            z-index: 2;
            background: url('/Content/Images/login/panel-c.gif') repeat-y;
            width: 729px;
            height: 310px;
        }

        .panel-c-l {
            position: absolute;
            left: 60px;
            top: 40px;
        }

        .panel-c-r {
            position: absolute;
            right: 20px;
            top: 50px;
            width: 222px;
            line-height: 200%;
            text-align: left;
        }

        .panel-c-l h3 {
            color: #556A85;
            margin-bottom: 10px;
        }

        .panel-c-l td {
            padding: 7px;
        }

        .login-text {
            height: 24px;
            left: 24px;
            border: 1px solid #e9e9e9;
            background: #f9f9f9;
        }

        .login-text-focus {
            border: 1px solid #E6BF73;
        }

        .login-btn {
            width: 114px;
            height: 29px;
            color: #E9FFFF;
            line-height: 29px;
            background: url('/Content/Images/login/login-btn.gif') no-repeat;
            border: none;
            overflow: hidden;
            cursor: pointer;
        }

        #txtUsername, #txtPassword {
            width: 191px;
        }

        #code {
            width: 95px;
        }

        #logincopyright {
            text-align: center;
            color: White;
            margin-top: 50px;
        }

        a {
            color: Black;
        }

            a:hover {
                color: Red;
                text-decoration: underline;
            }
    </style>


</head>
<body style="padding: 10px">

    <div id="login">
        <div id="loginlogo">
        </div>
        <div id="loginpanel">
            <div class="panel-h">
            </div>
            <div class="panel-c">
                <div class="panel-c-l">
                    @using (Ajax.BeginForm("UserLogin", "Login", new { }, new AjaxOptions() { HttpMethod = "Post", OnSuccess = "LoginAfter", LoadingElementId = "divState" }, new { id = "LoginForm" }))
                    {
                        <table cellpadding="0" cellspacing="0">
                            <tbody>
                                <tr>
                                    <td align="left" colspan="2">
                                        <h3>易OA系统登录</h3>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="right">账号：
                                    </td>
                                    <td align="left">
                                        <input type="text" name="LoginCode" id="LoginCode" class="login-text" />

                                    </td>
                                </tr>
                                <tr>
                                    <td align="right">密码：
                                    </td>
                                    <td align="left">
                                        <input type="password" id="LoginPwd" value="" class="login-text" />
                                        <input id="HiddenPwd" name="LoginPwd" type="hidden">
                                    </td>
                                </tr>
                                <tr>
                                    <td>验证码：
                                    </td>
                                    <td align="left">
                                        <input type="text" class="login-text" id="code" name="vCode" value="" />
                                        <img id="img" src='@Url.Action("ValidateCode", "Login")' style="height: 24px;margin-bottom:-7px;" onclick="changeValidateCode();return false;" />
                                        @*<div style="margin-left: 5px; margin-top: 10px;">
                                            <a href="javascript:void(0)" onclick="changeValidateCode();return false;">看不清，换一张</a>
                                        </div>*@
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>
                                        <input id="chbAutoLogin" name="AutoLogin" type="checkbox" /><label for="chbAutoLogin">7天内自动登录</label>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center" colspan="2">
                                        <input type="submit" id="btnLogin" value="登录" class="login-btn" /><span id="msg" style="font-size: 14px; color: red; display: none;"></span>
                                        <div id="divState" style="display: none">登录中，请稍候...</div>
                                    </td>
                                </tr>
                            </tbody>
                        </table> 
                    }

                </div>
                <div class="panel-c-r">
                    <p>
                        请从左侧输入登录账号和密码登录
                    </p>
                    <p>
                        如果遇到系统问题，请联系网络管理员。
                    </p>
                    <p>
                        @Html.ActionLink("没有账号？立即注册", "Index", "Register", new { }, new { id = "aReg" });
                    </p>
                    <p>
                        ......
                    </p>
                </div>
            </div>
            <div class="panel-f">
            </div>
        </div>
        <div id="logincopyright">
            Copyright ? 2018 SimOA.com
        </div>
    </div>
</body>
</html>
